<%-include("../partials/header.ejs") %>

<div class="container">
	<div class="row">
		<h1 style="text-align:center;">
			Edit <%=campground.name%>
		</h1>
		<div class="mobile">
			<form action="/campgrounds/<%=campground._id%>/?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="campground[name]" placeholder="name" value="<%=campground.name%>">
				</div>
				
				<div class="form-group">
					<input class="form-control" type="text" name="campground[image]" placeholder="image URL" value="<%=campground.image%>">
				</div>
				<div class="form-group">
					<textarea class="form-control" type="text" name="campground[description]" placeholder="description"><%=campground.description%></textarea>
				</div>
				<div class="form-group">
					<input class="form-control" type="number" value="<%=campground.price%>" name="campground[price]" min="0.01" step="0.01">
				</div>
				
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block ">
						Submit
					</button>
				</div>

			</form>
			<a href="/campgrounds">Go back</a>
		</div>
		
	</div>
	
</div>	
<%-include("../partials/footer.ejs") %>
	
